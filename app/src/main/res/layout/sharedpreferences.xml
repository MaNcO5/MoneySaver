<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

    </ScrollView>

    <TextView
        android:id="@+id/tvLoadSheredPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignLeft="@+id/bSave"
        android:layout_alignStart="@+id/bSave"/>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_below="@+id/bSave"
        android:layout_alignLeft="@+id/bSave"
        android:layout_alignStart="@+id/bSave"
        android:layout_marginTop="-7dp"/>

    <Button
        android:id="@+id/bSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:layout_below="@+id/etSharedPrefs"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etSharedPrefs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/tvLoadSheredPrefs"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>