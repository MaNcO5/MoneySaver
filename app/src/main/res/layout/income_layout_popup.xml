<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:text="Income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/income_pupUp_txt"
        android:fontFamily="serif-monospace"
        android:autoText="false"
        android:textSize="24sp"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/amount_number_txt"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/amount_number_txt"
        android:hint="Amount"
        android:singleLine="false"
        android:textStyle="normal|italic"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_below="@+id/income_pupUp_txt"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Set Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setDate"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/income_pupUp_txt"
        android:layout_alignStart="@+id/income_pupUp_txt"/>

    <TextView
        android:text="Category :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setDate"
        android:layout_toLeftOf="@+id/amount_number_txt"
        android:layout_toStartOf="@+id/amount_number_txt"
        android:id="@+id/textView3"
        android:typeface="sans"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:text="Date :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/setDate"
        android:layout_alignBottom="@+id/setDate"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"/>

    <TextView
        android:text="Cost :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/amount_number_txt"
        android:layout_toLeftOf="@+id/amount_number_txt"
        android:layout_toStartOf="@+id/amount_number_txt"
        android:layout_marginTop="10dp"
        android:id="@+id/textView5"/>

</RelativeLayout>